.details{background-color:#fff;}
.details-content{margin:20px auto;display: none;}
.details-content.show{display: block;}
.details-content__info{padding-bottom:20px;overflow:hidden;}
.details-content__info_left{float:left;padding:10px;border:1px solid #ddd;}
.details-content__info_left_maxImg{width:400px;height:400px;background:no-repeat center center;background-size: contain;}
.details-content__info_left_minImg{width:400px;margin-top:10px;}
.details-content__info_left_minImg>li{display:inline-block;background:no-repeat center center;background-size: contain;;width:50px;height:50px;border:2px solid #fff;margin-right:10px;cursor: pointer;}
.details-content__info_left_minImg>li:last-child{margin:0;}
.details-content__info_left_minImg>li.details-content__info_left_minImg--action{border-color:red;}
.details-content__info_right{margin:20px 0 0 440px;overflow:hidden;}
.details-content__info_right>div{float:left;}
.details-content__info_right_goods{color:#6C6C6C;width:530px;}
.details-content__info_right_goods>p,.details-content__info_right_goods>div{padding-left:10px;}
.details-content__info_right_goods b{display:inline-block;width:70px;}
.details-content__info_right_goods_name{font-size:20px;color:#333;margin-bottom:5px;}
.details-content__info_right_goods_price{background-color:#FFF9F5;padding:10px 10px;margin:5px 0;position:relative;height:75px;}
.details-content__info_right_goods_price>p>span{margin-right:10px;}
.details-content__info_right_goods_price i{font-size:2em;font-weight:bold;}
.details-content__info_right_goods_price>p>span.yj{text-decoration:line-through;}
.details-content__info_right_goods_price>div{position:absolute;top:10px;right:10px;border-left:1px solid #ddd;padding-left:20px;}
.details-content__info_right_goods_buySize{border-top:1px solid #ddd;border-bottom:1px solid #ddd;padding:10px 0px!important;margin:10px 0 10px 10px;}
.details-content__info_right_goods_buySize>span{text-align:center;display:inline-block;width:33%;border-left:1px solid #ddd;}
.details-content__info_right_goods_buySize>span:first-child{border:none;}
.details-content__info_right_goods_btn{margin-top:80px;}
.details-content__info_right_goods_btn>div{text-align:center;overflow:hidden;display:inline-block;vertical-align:middle;}
.details-content__info_right_goods_btn_changeNum{position:relative;width:130px;height:35px;line-height:35px;border:1px solid #a0a0a0;}
.details-content__info_right_goods_btn_changeNum>input{border:none;outline:none;height:100%;width:100%;text-align:center;float:left;}
.details-content__info_right_goods_btn_changeNum>span{border-right:1px solid #a0a0a0;display:block;position:absolute;width:35px;z-index:10;top:0;cursor:pointer;-webkit-user-select:none;font-size:20px;background-color:#eee;}
.details-content__info_right_goods_btn_changeNum>span:last-child{right:0px;border-left:1px solid #a0a0a0;border-right:0px;}
.details-content__info_right_goods_btn_addCarts{color:#fff;height:37px;line-height:37px;width:100px;margin-left:20px;}
.details-content__info_right_goods_btn_addCarts.null{background-color: #777!important;}
.details-content__info_right_goods_promotionInfo>div{vertical-align:top;display:inline-block;white-space:nowrap;}
.details-content__info_right_goods_promotionInfo .list{}
.details-content__info_right_goods_promotionInfo .name{display:inline-block;font-size:10px;border-radius:5px;padding:2px 5px;margin-bottom:5px;border:1px solid #df0011;color:#df0011;}
.details-content__info_right_goods_promotionInfo .cnt{vertical-align: top;margin-left:10px;max-width: 370px;white-space: normal;line-height:23px;font-size:10px;color:#444;display: inline-block;}
.details-content__info_right_goods_promotionInfo .cnt>div{position: relative;}
.details-content__info_right_goods_promotionInfo .look{display: inline-block;}
.details-content__info_right_goods_promotionInfo .look .text{cursor: pointer;color: #5b84ff;margin-left: 5px;}
.details-content__info_right_goods_promotionInfo .look:hover .text{text-decoration: underline;}
.details-content__info_right_goods_promotionInfo .look:hover .giftBox{display: block;}
.details-content__info_right_goods_promotionInfo .giftBox{z-index: 100;width: 300px;font-size: 10;border: 1px solid #999;position: absolute;top: 10px;right: -295px;background: #fff;display: none;}
.details-content__info_right_goods_promotionInfo .giftBox>.t{padding-left: 10px;background-color: #f7f5f5;}
.details-content__info_right_goods_promotionInfo .giftBox .item{padding-left: 30px;background:no-repeat 8px 2px;background-size: 18px;overflow: hidden;}
.details-content__info_right_goods_promotionInfo .giftBox .item.icon-g{background-image: url("../../images/gift_icon.png");}
.details-content__info_right_goods_promotionInfo .giftBox .item.icon-c{background-image: url("../../images/gift_icon2.png");}
.details-content__info_right_goods_promotionInfo .giftBox .item>span{display: inline-block;}
.details-content__info_right_goods_promotionInfo .giftBox .item>span:first-child{float: left;width: 210px;}
.details-content__info_right_goods_promotionInfo .giftBox .item>span:last-child{float: right;width: 50px;text-align: center;}


.details-content__info_right_shopInfo{border:1px solid #ddd;width:188px;margin-left:20px;padding:10px;text-align:center;}
.details-content__info_right_shopInfo_logo{height:90px;border-bottom:1px solid #ddd;background:no-repeat center center;background-size: contain;}
.details-content__info_right_shopInfo_name{height:40px;line-height:40px;font-size:14px;border-bottom:1px solid #ddd;font-size:16px;font-weight:bold;margin-bottom:10px;}
.details-content__info_right_shopInfo_tel>span{font-size:16px;display:block;}
.details-content__info_right_shopInfo_goShop{color: #fff!important;border-radius:20px;height:40px;line-height:40px;width:80%;margin:10px auto;display:block;}
.details-itemList{margin: 0 auto;}
.details-itemList img{width:100%;}
.details-content .item-groupList__goods>li{width:33.3%;}
.details-content__info_right_goods_children{margin-top:20px;}
.details-content__info_right_goods_children>div{display:inline-block;width:440px;margin-left:10px;vertical-align: top;}
.details-content__info_right_goods_children>div>a{border:1px solid #ddd;display:inline-block;color:#333;background-color:#fdfdfd;margin:0 10px 5px 0;}
.details-content__info_right_goods_children>div>a.act{border:2px solid #df0011;}
.details-content__info_right_goods_children i{display:inline-block;width:40px;height:40px;margin:5px;vertical-align:middle;background:no-repeat center center;background-size:100%;}
.details-content__info_right_goods_children span{display:inline-block;max-width:360px;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;}
.details-content__tag>span{display:inline-block;}
.details-content__tag>.NonReturnable{color: #fff;background-color: red;font-size: 12px;padding: 2px 10px;}
