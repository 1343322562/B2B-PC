.item{background-color:#fff;}
.item-content{margin:20px auto;}
.item-content__list{padding:20px 0;min-height:700px;}
.item-content__list>li{float:left;width:20%;padding:10px 0 10px 0;position:relative;height:390px;}
.item-content__list>li:hover{z-index:10;box-shadow:0 0 10px #ddd;}
.item-content__list_goods{width:90%;margin:0 auto;}
.item-content__list_goods_img{display:block;height:215px;overflow:hidden;position:relative;}
.item-content__list_goods_img>img{width:100%;}
.item-content__list_goods_img>.integralTag{display: block;position: absolute;right: 0px;bottom: 0px;color: #fff;background-color: #df0011;padding: 2px 5px;border-radius: 5px 0 0 0;font-size: 10px;}
.item-content__list_goods_price{font-size:13px;margin:5px 0 4px 0;}
.item-content__list_goods_price>span{display:flex;color:#666;align-items: flex-end;}
.item-content__list_goods_price>span>i{font-size:1.6em;padding-right:10px;}
.item-content__list_goods_price .oldPrice{display: flex;}
.item-content__list_goods_price .textPrice{text-decoration: line-through; padding-right: 10px;}
.item-content__list_goods_name{font-size:13px;height:37px;overflow:hidden;color:#000;margin-top:10px;}
.item-content__list_goods_name>a:hover{text-decoration: underline;}
.item-content__list_goods_size{font-size:12px;}
.item-content__list_goods_size>p{overflow:hidden;color:#999;}
.item-content__list_goods_bottom{overflow:hidden;text-align:center;position: absolute;left: 10px;bottom: 10px;}
.item-content__list_goods_bottom>div{float:left;}
.item-content__list_goods_bottom_addCarts{height:40px;width:80px;background:#df0011;line-height:40px;font-size:10px;color:#fff;margin-left:5px;cursor:pointer;}
.item-content__list_goods_bottom_addCarts.null{background-color: #777;}
.item-content__list_goods_bottom_info{overflow:hidden;margin-left:5px;}
.item-content__list_goods_bottom_info>.item{display: flex;height: 19px;line-height: 19px;border: 1px solid #999;border-right: none;}
.item-content__list_goods_bottom_info>.item:last-child{border-top: none;}
.item-content__list_goods_bottom_info span{font-size:10px;display:block;border-right: 1px solid #999;height: 100%;text-align: center;}
.item-content__list_goods_bottom_info .l2{width: 35px;}
.item-content__list_goods_bottom_info .l4{width: 50px;}
.item-content__list_goods_name i{display:inline-block;border:1px solid #df0011;font-size:11px;border-radius:2px;color:#df0011;margin-right:5px;height:15px;line-height:15px;padding:0 2px;}
.item-shopInfo{border:1px solid #bbb;overflow:hidden;padding:10px;margin-bottom:20px;}
.item-shopInfo__logo{height:120px;width:220px;margin-right:10px;background:no-repeat center center;background-size:contain;}
.item-shopInfo__msg>p:first-child{font-size:1.5em;margin-bottom:10px;}
.item-shopInfo__minMoney{border-left:1px solid #ddd;text-align:center;width:200px;font-size:1.4em;height:120px;}
.item-shopInfo__minMoney>p{margin-top:40px;}
.item-shopInfo__minMoney>span{font-size:1.5em;}
.item-content__list_goods_bottom>.form{width: 80px;border: 1px solid #999;display: flex;margin-left: 10px;height: 40px;}
.item-content__list_goods_bottom>.form input{margin: 0;padding: 0;height: 40px;width: 55px;text-align: center;border: none;}
.item-content__list_goods_bottom>.form .changeBtn{border-left: 1px solid #999;}
.item-content__list_goods_bottom>.form .changeBtn>span{cursor: pointer;display: block;width: 23px;height:19px;background: url('../../images/loginAdnCart.png')no-repeat;background-size: 160px;}
.item-content__list_goods_bottom>.form .changeBtn>span:first-child{background-position: 0px -30px;}
.item-content__list_goods_bottom>.form .changeBtn>span:last-child{border-top: 1px solid #999;background-position: 0px -45px;}
.item-content__list_goods_bottom>.form .changeBtn>span:hover{background-color: #f2f2f2;}

.item-content__list_goods_children>p{margin:10px 0;color:#999;font-size:13px;}
.item-content__list_goods_children>div{overflow:hidden;width:100%;white-space:nowrap;}
.item-content__list_goods_children>div>a{display:inline-block;width:49px;height:49px;margin-right:5px;background:no-repeat center center;background-size:100%;}
.item-content__list_goods_tag{padding-top: 7px;}
.item-content__list_goods_tag>span{display: inline-block;font-size: 5px;padding: 1px 3px;border-radius: 5px;margin-left: 5px;border: 1px solid transparent;}
.item-content__list_goods_tag>span:first-child{margin: 0;}
.item-content__list_goods_tag>.NonReturnable{background-color: #d40000;border-color:#d40000 ;color: #fff;}
.item-content__list_goods_tag>.drxg,.item-content__list_goods_tag>.sdtj{background-color: transparent;color: #d40000;border-color: #d40000;}
.item-content__list_goods_tag>.mz{background-color: #d40000;color: #fff;border-color: #d40000;}